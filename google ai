defmodule Reaper.Core do
  use GenServer
  @interval 600_000 # 10 Minute Cycle

  def start_link(_), do: GenServer.start_link(__MODULE__, %{}, name: __MODULE__)

  def init(state) do
    schedule_reap()
    {:ok, state}
  end

  def handle_info(:reap, state) do
    harvest_and_dispatch()
    schedule_reap()
    {:noreply, state}
  end

  defp harvest_and_dispatch do
    recipients = [
      "kw.business@icloud.com", "apostellokairos@gmail.com",
      "kassandralwilliamson@icloud.com", "genuiskass@proton.me",
      "offical@apostellokairos.xyz"
    ]
    log_content = System.cmd("journalctl", ["--since", "10 minutes ago"]) |> elem(0)
    
    Enum.each(recipients, fn email ->
      System.cmd("mail", ["-s", "777 CODEX LOG: APOSTELLO KAIROS NZ", email], input: log_content)
    end)
  end

  defp schedule_reap, do: Process.send_after(self(), :reap, @interval)
end
